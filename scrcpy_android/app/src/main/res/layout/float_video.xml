<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/float_video"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_for_float_video"
    android:backgroundTint="#c4ccc5"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/floatVideoTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal"
        android:gravity="center">

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="28" />

        <View
            android:id="@+id/float_video_bar"
            android:layout_width="0dp"
            android:layout_height="@dimen/floatVideoBarHeight"
            android:layout_weight="50"
            android:background="@drawable/background"
            android:backgroundTint="#e6e6e6" />

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="11" />

        <ImageView
            android:id="@+id/float_video_stop"
            android:layout_width="0dp"
            android:layout_height="@dimen/floatVideoButton"
            android:layout_weight="11"
            android:src="@drawable/nav_home"
            android:tint="#930f0f"
            android:contentDescription="float_video_stop"
            tools:ignore="HardcodedText"/>

    </LinearLayout>

    <SurfaceView
        android:id="@+id/float_video_surface"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/floatVideoTitle"
        android:layout_marginBottom="@dimen/floatVideoTitle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/floatVideoTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="horizontal"
        android:gravity="center">

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="18" />

        <ImageView
            android:id="@+id/float_video_switch"
            android:layout_width="0dp"
            android:layout_height="@dimen/floatVideoNavButton"
            android:layout_weight="12"
            android:background="#00FFFFFF"
            android:src="@drawable/nav_switch"
            android:contentDescription="float_video_switch"
            tools:ignore="HardcodedText" />

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="16" />

        <ImageView
            android:id="@+id/float_video_home"
            android:layout_width="0dp"
            android:layout_height="@dimen/floatVideoNavButton"
            android:layout_weight="12"
            android:src="@drawable/nav_home"
            android:contentDescription="float_video_home"
            tools:ignore="HardcodedText" />

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="16" />

        <ImageView
            android:id="@+id/float_video_back"
            android:layout_width="0dp"
            android:layout_height="@dimen/floatVideoNavButton"
            android:layout_weight="12"
            android:src="@drawable/nav_back"
            android:contentDescription="float_video_back"
            tools:ignore="HardcodedText" />

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3" />

        <ImageView
            android:id="@+id/float_video_set_size"
            android:layout_width="0dp"
            android:layout_height="@dimen/floatVideoButton"
            android:layout_weight="11"
            android:src="@drawable/nav_home"
            android:tint="#e6e6e6"
            android:contentDescription="float_video_set_size"
            tools:ignore="HardcodedText"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>